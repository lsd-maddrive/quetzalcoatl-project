<?xml version="1.0" encoding="UTF-8"?>
<launch>

    <arg name="map_name" default="new_map.db" />
    <arg name="localization" default="false" /> <!-- set false to start mapping-->
    <arg name="debug" default="false"/>
    <arg name="rviz" default="true" />
    <arg name="rtabmap_viz" default="true" />
    <arg name="database_path" default="$(find quetzalcoatl_maps)/3d_maps/$(arg map_name)"/>
    <arg name="gui" default="false" />

    <!-- <arg name='ekf_global' default='true'/> -->
    <arg name="imu_topic" default="/rs_camera_left/imu/filtered" />
    <arg name="odom_topic_local" default="/quetzalcoatl/odometry/filtered/local" />
    <arg name="odom_topic_global" default="/quetzalcoatl/odometry/filtered/global" />
    <arg name="gps_topic" default="/gps/fix" />

    <!-- simulation with robot -->
    <include file="$(find quetzalcoatl_description)/launch/quetzalcoatl.launch">
        <arg name="world" value="$(find maddrive_worlds)/worlds/gas.world" />
        <arg name="gui" value="$(arg gui)" />
    </include>

    <!-- rtabmap-->
    <include file="$(find quetzalcoatl_vision)/launch/start_rtabmap_multi.launch">
        <arg name="nodelet" value=""/>
        <arg name="rtabmap" value="true" />
        <arg name="localization" value="$(arg localization)" />
        <arg name="database_path" value="$(arg database_path)" />
        <arg name="rtabmap_viz" value="$(arg rtabmap_viz)" />
        <arg name="imu_topic" value="$(arg imu_topic)" />
    </include>

    <!-- robot_localization-->
    <node pkg="robot_localization" type="ekf_localization_node" name="ekf_localization" clear_params="true" output="screen">
        <rosparam command="load" file="$(find quetzalcoatl_software)/config/ekf/ekf_odom_wheel.yaml" />
        <remap from="odometry/filtered" to="/quetzalcoatl/odometry/filtered/local" />
    </node>

    <!-- Sync cameras for RGBD-->
    <include file="$(find quetzalcoatl_software)/launch/sim/rgbd_sim_sync.launch"/>

    <!-- joy teleop-->
    <include file="$(find maddrive_teleop)/launch/start_joy_teleop.launch">
    </include>
    <!-- move_base -->
    <include file="$(find quetzalcoatl_software)/launch/drivers/move_base.launch">
        <arg name="config_folder_name" value="move_base_vo" />
        <arg name="cmd_topic" value="nav_vel" />
    </include>
    <!-- twist_mux -->
    <node pkg="twist_mux" type="twist_mux" name="twist_mux" output="screen">
        <rosparam command="load" file="$(find quetzalcoatl_software)/config/twist_mux/twist_mux.yaml" />
        <remap from="cmd_vel_out" to="cmd_vel"/>
    </node>
    <!-- cmd_vel filter -->
    <node pkg="maddrive_teleop" type="steering_filter" name="steering_filter" ns="quetzalcoatl" output="screen">
        <param name="steering_alpha" value="1.0" />
        <remap from="cmd_vel_raw" to="cmd_vel_raw" />
        <remap from="cmd_vel" to="cmd_vel" />
    </node>

    <!-- debug instruments -->
    <group if="$(arg debug)">
        <node name="rqt_plot" pkg="rqt_plot" type="rqt_plot"
            args="
                /quetzalcoatl/cmd_vel_raw/angular/z
                /quetzalcoatl/cmd_vel/angular/z
                /quetzalcoatl/wheel_odom/pose/pose/position/x
                /quetzalcoatl/wheel_odom/pose/pose/position/y
                /quetzalcoatl/wheel_odom/pose/pose/orientation/z
                /quetzalcoatl/odometry/filtered/local/pose/pose/position/x
                /quetzalcoatl/odometry/filtered/local/pose/pose/position/y
                /quetzalcoatl/odometry/filtered/local/pose/pose/orientation/z"/>
        <node name="rqt_console" pkg="rqt_console" type="rqt_console"/>
        <node name="rqt_runtime_monitor" pkg="rqt_runtime_monitor" type="rqt_runtime_monitor"/>
        <node name="rqt_tf_tree" pkg="rqt_tf_tree" type="rqt_tf_tree"/>
        <node name="rqt_graph" pkg="rqt_graph" type="rqt_graph"/>
    </group>

    <!-- rviz-->
    <node if="$(arg rviz)" name="rviz" pkg="rviz" type="rviz" args="-d $(find quetzalcoatl_software)/config/rviz/common_sim.rviz" />

</launch>